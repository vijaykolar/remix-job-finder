model Company {
  id                   String  @id @default(auto()) @map("_id") @db.ObjectId
  title                String
  description          String?
  location             String?
  job              Job?
  jobId                String  @db.ObjectId
}

model Job {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  description          String?
  skills               String[]
  salary               String?
  numberOfApplications Int?    @default(0)
  companyId String?  @db.ObjectId @unique
  company   Company? @relation(fields: [companyId], references: [id])
}
